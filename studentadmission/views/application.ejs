<!-- application.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Application Information</title>
    <link rel="stylesheet" href="./public/stylesheets/application.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #e0f7fa; /* Light blue background */
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .page {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            text-align: center;
            width: 80%; /* Adjust the width as needed */
        }

        h1 {
            color: #00796b; /* Dark teal text color */
        }

        ul {
            list-style: none;
            padding: 0;
        }

        li {
            margin: 10px 0;
            color: #333; /* Dark text color */
        }

        button {
            background-color: #009688; /* Teal button color */
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            margin-top: 15px;
        }

        button:hover {
            background-color: #00796b; /* Dark teal on hover */
        }
    </style>
</head>

<body>
    <div class="page">
        <h1>Application Information</h1>
        <ul>
            <li><strong>Email:</strong> <%= submittedData.email %></li>
            <li><strong>Adhar Card:</strong> <%= submittedData.adhar %></li>
            <li><strong>Address:</strong> <%= submittedData.address %></li>
            <li><strong>CET Score:</strong> <%= submittedData.cetScore %></li>
            <li><strong>Mobile:</strong> <%= submittedData.mobile %></li>
            <li><strong>Preferred Branch:</strong> <%= submittedData.branch %></li>
        </ul>
        <button onclick="printApplication()">Print</button>
    </div>

    <script>
        function printApplication() {
            window.print();
        }
    </script>
</body>

</html>
